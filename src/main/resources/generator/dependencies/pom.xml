  <artifactId>jhlite-dependencies</artifactId>
  <version>0.0.7-SNAPSHOT</version>
  <name>jhlite dependencies</name>
  <description>JHipster Lite dependencies list</description>
  <packaging>pom</packaging>

  <properties>
    <jjwt.version>0.11.2</jjwt.version>
    <logstash-logback-encoder.version>7.0.1</logstash-logback-encoder.version>
    <problem-spring.version>0.27.0</problem-spring.version>
    <spring-boot.version>2.6.4</spring-boot.version>
    <spring-cloud.version>2021.0.0</spring-cloud.version>
    <spring-cloud-netflix-eureka-client.version>3.1.1</spring-cloud-netflix-eureka-client.version>
    <springdoc-openapi.version>1.6.6</springdoc-openapi.version>
